@model LibraryManagementSystem.ViewModels.BookIndexViewModel

@{
    ViewData["Title"] = "Books List";
}

<h1>Books List</h1>

<form asp-action="Index" method="get" class="mb-4">
    <div class="row">
        <div class="col-md-4">
            <input type="text" name="genreFilter" value="@Model.GenreFilter" class="form-control" placeholder="Filter by Genre..." />
        </div>
        <div class="col-md-4">
            <input type="number" name="yearFilter" value="@Model.YearFilter" class="form-control" placeholder="Filter by Year..." />
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary">Filter</button>
            <a asp-action="Index" class="btn btn-secondary">Reset</a>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Year</th>
            <th>Genre</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Books)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Author</td>
                <td>@item.PublishedYear</td>
                <td>@item.Genre</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>